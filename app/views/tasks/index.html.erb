<h1>Tasks#index</h1>
<%= form_tag user_tasks_url(@user), :method => :get do %>
  <%= text_field_tag("name", @name) %>
  <%= submit_tag("検索") %>
<% end %> 
<br />
<div>
  <%= link_to "新規作成", new_user_task_url(@user) %><br />
  <%= link_to "CSVダウンロード", download_user_tasks_url(@user) %><br />
</div>
<table>
  <tr>
    <th>優先度</th><th>タスク名</th><th>締め切り</th><th></th>
  </tr>
  <% @task.each do |task| %> 
    <tr>
      <td><%= priority_name(task.priority) %></td>
      <td><%= task.name %></td>
      <td><%= task.deadline.try(:strftime, "%Y-%m-%d %H:%M:%S") %></td>
      <td>
        <%= link_to "編集", edit_user_task_url(@user, task) %>
        <%= link_to "削除", user_task_url(@user, task), :method => 'delete', :confirm => "削除してもよろしいですか" %>
      </td>
    </tr>
  <% end %> 
</table>
